<%= form_tag login_path do %>
  <div class="form-group form-inline">
    <%= label_tag :name, '名前', class: "col-xs-4 text-right control-label" %>
    <%= text_field_tag :name, params[:name], class: "form-control" %>
  </div>
  <div class="form-group form-inline">
    <%= label_tag :password, 'パスワード', class: "col-xs-4 text-right control-label" %>
    <%= password_field_tag :password, nil, class: "form-control" %>
  </div>
  <%= submit_tag 'ログイン', class:'col-xs-offset-4 btn btn-primary' %>
<% end %>
